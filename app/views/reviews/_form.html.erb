<%= form_for(@review) do |f| %>
  
	
	<%= f.hidden_field :product_id %>
    <%= f.hidden_field :name %>
	<br />
 
	<div class="field">
		<%= f.label :review_text, "Please write your Review here :- " %><br />
		<%= f.text_area :review_text, :autofocus => true, :rows=> 12, :cols=> 45  %>
	</div>  
	
	<div class="field">
		<%= f.label :no_of_stars, "Please 'star rate' (1-5)" %><br />
		<%= f.radio_button(:no_of_stars, "1") %>
		<%= f.radio_button(:no_of_stars, "2") %>
		<%= f.radio_button(:no_of_stars, "3") %>
		<%= f.radio_button(:no_of_stars, "4") %>
		<%= f.radio_button(:no_of_stars, "5") %>
	</div>
	
	<div class="actions">
		<%= f.submit "Save Review"%>
	</div>
<% end %>
